module Dodopayments
  module Resources
    class Customers
      attr_reader customer_portal: Dodopayments::Resources::Customers::CustomerPortal

      def create: (
        email: String,
        name: String,
        ?phone_number: String?,
        ?request_options: Dodopayments::request_opts
      ) -> Dodopayments::Customer

      def retrieve: (
        String customer_id,
        ?request_options: Dodopayments::request_opts
      ) -> Dodopayments::Customer

      def update: (
        String customer_id,
        ?name: String?,
        ?phone_number: String?,
        ?request_options: Dodopayments::request_opts
      ) -> Dodopayments::Customer

      def list: (
        ?page_number: Integer?,
        ?page_size: Integer?,
        ?request_options: Dodopayments::request_opts
      ) -> Dodopayments::Internal::DefaultPageNumberPagination[Dodopayments::Customer]

      def initialize: (client: Dodopayments::Client) -> void
    end
  end
end
